<div class="m-4">
  <h1>All our Flats</h1>
  <p>All <%= @flats.count%> flats.</p>
</div>

<div class="d-flex p-2 bd-highlight justify-content-around align-items-end">
  <% @flats.each do |flat| %>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="https://cdn.apartmenttherapy.info/image/upload/v1619013756/at/house%20tours/2021-04/Erin%20K/KERR-130-CLARKSON-2R-01-020577-EDIT-WEB.jpg" alt="Card image cap">
      <div class="card-body bg-light">
        <h5 class="card-title"><%= flat.name %></h5>
        <p class="card-text"><%= flat.description %></p>
      </div>
      <div class="d-flex justify-content-center gap-3 bg-white h-100 w-100 py-3">
        <%= link_to 'More Info', flat_path(flat), class: "btn btn-primary" %>
        <%= link_to 'Delete', flat_path(flat), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
